@model LibraryManagementSystem.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h2>Category Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Number of Books
        </dt>
        <dd class="col-sm-10">
            @Model.Books.Count()
        </dd>
    </dl>
</div>

<div>
    <a href="@Url.Action("Edit", "Category", new { id = Model.CategoryId })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Back to List</a>
</div>