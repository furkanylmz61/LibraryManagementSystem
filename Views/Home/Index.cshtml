@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Banner -->
<section class="bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="display-4">Welcome to Library Management System</h1>
        <p class="lead">Your one-stop solution for managing and exploring a vast collection of books.</p>
        <a href="@Url.Action("Index", "Book")" class="btn btn-light btn-lg mt-3">Browse Books</a>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center">
            <!-- Feature 1 -->
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-book-half display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Extensive Collection</h5>
                        <p class="card-text">Access a wide range of books across various genres and authors.</p>
                    </div>
                </div>
            </div>
            <!-- Feature 2 -->
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-search display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Advanced Search</h5>
                        <p class="card-text">Find exactly what you're looking for with our powerful search tools.</p>
                    </div>
                </div>
            </div>
            <!-- Feature 3 -->
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-calendar-check display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Easy Management</h5>
                        <p class="card-text">Effortlessly manage your library's inventory and track book availability.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Books Section -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">Featured Books</h2>
        <div class="row">
            @* Örnek kitaplar *@
            @foreach (var book in Model.FeaturedBooks)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(book.CoverImage))
                        {
                            <img src="~/uploads/@book.CoverImage" class="card-img-top" alt="@book.Name" style="height: 300px; object-fit: cover;">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@book.Name</h5>
                            <p class="card-text">by @book.Author</p>
                            <a href="@Url.Action("Details", "Book", new { id = book.BookId })" class="mt-auto btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


