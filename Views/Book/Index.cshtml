@model IEnumerable<LibraryManagementSystem.Models.Book>

<h2>Book List</h2>
<a class="btn btn-primary" asp-action="Create">Create New Book</a>

<table class="table table-striped mt-3">
    <thead>
    <tr>
        <th>Book Name</th>
        <th>Author</th>
        <th>Available Copies</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach(var book in Model)
    {
        <tr>
            <td>@book.Name</td>
            <td>@book.Author</td>
            <td>@book.AvailableCopies</td>
            <td>
                <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-info">Details</a>
                <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>