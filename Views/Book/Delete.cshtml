@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<h4>Are you sure you want to delete this book?</h4>

<div>
    <strong>Book Name:</strong> @Model.Name
</div>
<div>
    <strong>Author:</strong> @Model.Author
</div>
<div>
    <strong>Available Copies:</strong> @Model.AvailableCopies
</div>
<!-- İsteğe göre diğer alanları da gösterebilirsiniz -->

<form asp-action="DeleteConfirmed" asp-controller="Book" method="post">
    <input type="hidden" asp-for="BookId" />
    <div class="form-group mt-3">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>