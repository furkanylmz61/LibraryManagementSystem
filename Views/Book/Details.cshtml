@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<style>
    .detail-label {
        font-weight: 600;
        display: inline-block;
        width: 140px;
    }
    .detail-item {
        margin-bottom: 10px;
    }
</style>

<h2>Book Details</h2>

<div class="detail-item">
    <span class="detail-label">Book Name:</span>
    @Model.Name
</div>
<div class="detail-item">
    <span class="detail-label">Author:</span>
    @Model.Author
</div>
<div class="detail-item">
    <span class="detail-label">Publish Date:</span>
    @Model.PublishDate
</div>
<div class="detail-item">
    <span class="detail-label">Page Count:</span>
    @Model.PageCount
</div>
<div class="detail-item">
    <span class="detail-label">Publisher:</span>
    @Model.PublisherCompany
</div>
<div class="detail-item">
    <span class="detail-label">ISBN:</span>
    @Model.ISBN
</div>
<div class="detail-item">
    <span class="detail-label">Genre:</span>
    @Model.Genre
</div>
<div class="detail-item">
    <span class="detail-label">Category:</span>
    @Model.Category?.Name
</div>

<div class="detail-item">
    <span class="detail-label">Language:</span>
    @Model.Language
</div>
<div class="detail-item">
    <span class="detail-label">Edition:</span>
    @Model.Edition
</div>
<div class="detail-item">
    <span class="detail-label">Number of Copies:</span>
    @Model.NumberOfCopies
</div>
<div class="detail-item">
    <span class="detail-label">Available Copies:</span>
    @Model.AvailableCopies
</div>
<div class="detail-item">
    <span class="detail-label">Shelf Location:</span>
    @Model.ShelfLocation
</div>

@if (!string.IsNullOrEmpty(Model.CoverImage))
{
    <div class="detail-item">
        <span class="detail-label">Cover Image:</span><br />
        <img src="~/uploads/@Model.CoverImage" alt="@Model.Name" style="max-width:150px;"/>
    </div>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.BookId" class="btn btn-danger">Delete</a>
</div>
